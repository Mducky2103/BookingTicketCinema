<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý Rạp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookingTicketCinema.ManagementApp.styles.css" asp-append-version="true" />
</head>
<body>

    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" asp-page="/Index">Cinema Management</a>
        <div class="navbar-nav ms-auto">
            <div class="nav-item d-flex align-items-center text-nowrap">
                <span class="nav-link px-3 text-white">
                    <i class="bi bi-person-circle"></i>
                    Chào, @User.Identity?.Name
                    (@(User.IsInRole("Admin") ? "Admin" : "Staff"))
                </span>
                <form method="post" asp-page="/Auth/Logout" class="form-inline m-0 p-0">
                    <button type="submit" class="nav-link px-3 btn btn-link text-white"
                            style="text-decoration: none;">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </button>
                </form>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3 sidebar-sticky">

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-1 mb-1 text-muted text-uppercase">
                        <span>Vận hành</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="bi bi-speedometer2"></i> Tổng quan
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/CheckIn/Index">
                                <i class="bi bi-upc-scan"></i> Kiểm tra vé
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/POS/Index">
                                <i class="bi bi-laptop"></i> Bán vé tại quầy (POS)
                            </a>
                        </li>
                    </ul>

                    @if (User.IsInRole("Admin"))
                    {
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted text-uppercase">
                            <span>Quản trị (Admin)</span>
                        </h6>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Showtimes/Index">
                                    <i class="bi bi-calendar-event"></i> Suất chiếu
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Movies/Index">
                                    <i class="bi bi-film"></i> Phim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Rooms/Index">
                                    <i class="bi bi-projector"></i> Phòng & Ghế
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/PriceRules/Index">
                                    <i class="bi bi-tags"></i> Giá vé
                                </a>
                            </li>
                        </ul>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted text-uppercase">
                            <span>Hệ thống (Admin)</span>
                        </h6>
                        <ul class="nav flex-column mb-2">
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Users/Index">
                                    <i class="bi bi-people"></i> Người dùng
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Reports/Sales">
                                    <i class="bi bi-bar-chart-line"></i> Báo cáo
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
