@page
@model BookingTicketCinema.ManagementApp.Pages.Rooms.IndexModel
@{
    ViewData["Title"] = "Quản lý Phòng";
}

@* Alerts *@
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
  <div class="alert alert-success alert-dismissible mb-4" role="alert">
    <i class="icon-base bx bx-check-circle me-2"></i>
    @Model.SuccessMessage
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
  <div class="alert alert-danger alert-dismissible mb-4" role="alert">
    <i class="icon-base bx bx-error-circle me-2"></i>
    @Model.ErrorMessage
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
}

<div class="row">
  <!-- Rooms Table -->
  <div class="col-12">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title m-0 me-2">Phòng</h5>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRoomModal">
          <i class="icon-base bx bx-plus me-1"></i>
          <span class="d-none d-sm-inline-block">Thêm Phòng Mới</span>
        </button>
      </div>
      <div class="table-responsive text-nowrap">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Tên</th>
              <th>Sức Chứa</th>
              <th>Loại</th>
              <th>Ngày Tạo</th>
              <th>Thao Tác</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            @if (Model.Rooms != null && Model.Rooms.Any())
            {
              @foreach (var room in Model.Rooms)
              {
                <tr>
                  <td><strong>#@room.RoomId</strong></td>
                  <td>
                    <i class="icon-base bx bx-video-recording icon-md text-primary me-3"></i>
                    <span class="fw-medium">@room.Name</span>
                  </td>
                  <td>@room.Capacity</td>
                  <td>
                    <span class="badge bg-label-@(room.Type == 0 ? "info" : room.Type == 1 ? "warning" : "success") me-1">
                      @(room.Type == 0 ? "2D" : room.Type == 1 ? "3D" : "IMAX")
                    </span>
                  </td>
                  <td>@room.CreatedAt.ToString("dd/MM/yyyy")</td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="icon-base bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="javascript:void(0);" 
                           data-bs-toggle="modal" 
                           data-bs-target="#editRoomModal"
                           data-room-id="@room.RoomId"
                           data-room-name="@room.Name"
                           data-room-capacity="@room.Capacity"
                           data-room-type="@room.Type">
                          <i class="icon-base bx bx-edit-alt me-1"></i> Sửa
                        </a>
                        <a class="dropdown-item" href="javascript:void(0);" 
                           onclick="confirmDelete(@room.RoomId, '@room.Name')">
                          <i class="icon-base bx bx-trash me-1"></i> Xóa
                        </a>
                      </div>
                    </div>
                  </td>
                </tr>
              }
            }
            else
            {
              <tr>
                <td colspan="6" class="text-center py-6">
                  <p class="text-body-secondary mb-0">Không tìm thấy phòng nào. Tạo phòng đầu tiên của bạn!</p>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Create Room Modal -->
<div class="modal fade" id="createRoomModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalCenterTitle">Tạo Phòng Mới</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form method="post" asp-page-handler="Create">
        <div class="modal-body">
          <div class="mb-3">
            <label for="createRoomName" class="form-label">Tên Phòng</label>
            <input type="text" class="form-control" id="createRoomName" name="name" placeholder="Nhập tên phòng" required />
          </div>
          <div class="mb-3">
            <label for="createRoomCapacity" class="form-label">Sức Chứa</label>
            <input type="number" class="form-control" id="createRoomCapacity" name="capacity" placeholder="Nhập sức chứa" min="1" required />
          </div>
          <div class="mb-3">
            <label for="createRoomType" class="form-label">Loại Phòng</label>
            <select class="form-select" id="createRoomType" name="type" required>
              <option value="0">2D</option>
              <option value="1">3D</option>
              <option value="2">IMAX</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
          <button type="submit" class="btn btn-primary">Tạo Phòng</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Room Modal -->
<div class="modal fade" id="editRoomModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalCenterTitle">Sửa Phòng</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="editRoomForm" method="post" asp-page-handler="Update">
        <div class="modal-body">
          <input type="hidden" id="editRoomId" name="id" />
          <div class="mb-3">
            <label for="editRoomName" class="form-label">Tên Phòng</label>
            <input type="text" class="form-control" id="editRoomName" name="name" placeholder="Nhập tên phòng" />
          </div>
          <div class="mb-3">
            <label for="editRoomCapacity" class="form-label">Sức Chứa</label>
            <input type="number" class="form-control" id="editRoomCapacity" name="capacity" placeholder="Nhập sức chứa" min="1" />
          </div>
          <div class="mb-3">
            <label for="editRoomType" class="form-label">Loại Phòng</label>
            <select class="form-select" id="editRoomType" name="type">
              <option value="0">2D</option>
              <option value="1">3D</option>
              <option value="2">IMAX</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
          <button type="submit" class="btn btn-primary">Cập Nhật Phòng</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Delete Confirmation Form -->
<form id="deleteRoomForm" method="post" asp-page-handler="Delete" style="display: none;">
  <input type="hidden" id="deleteRoomId" name="id" />
</form>

@section PageScripts {
<script>
  // Handle edit modal
  document.addEventListener('DOMContentLoaded', function() {
    const editModal = document.getElementById('editRoomModal');
    if (editModal) {
      editModal.addEventListener('show.bs.modal', function(event) {
        const button = event.relatedTarget;
        const roomId = button.getAttribute('data-room-id');
        const roomName = button.getAttribute('data-room-name');
        const roomCapacity = button.getAttribute('data-room-capacity');
        const roomType = button.getAttribute('data-room-type');

        document.getElementById('editRoomId').value = roomId;
        document.getElementById('editRoomName').value = roomName || '';
        document.getElementById('editRoomCapacity').value = roomCapacity || '';
        document.getElementById('editRoomType').value = roomType || '0';
      });
    }
  });

  // Handle delete confirmation
  function confirmDelete(roomId, roomName) {
    if (confirm(`Bạn có chắc chắn muốn xóa "${roomName}"? Hành động này không thể hoàn tác.`)) {
      document.getElementById('deleteRoomId').value = roomId;
      document.getElementById('deleteRoomForm').submit();
    }
  }
</script>
}

