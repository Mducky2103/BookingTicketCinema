@page
@model BookingTicketCinema.ManagementApp.Pages.Showtimes.IndexModel
@{
    ViewData["Title"] = "Quản lý Suất chiếu";
}

<!-- Alerts -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Danh sách Suất chiếu</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        <i class="bi bi-plus-circle me-1"></i> Thêm mới
    </button>
</div>

<!-- Bảng danh sách -->
<table class="table table-striped align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Phim</th>
            <th>Phòng chiếu</th>
            <th>Giờ bắt đầu</th>
            <th>Giờ kết thúc</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Showtimes != null && Model.Showtimes.Count > 0)
        {
            foreach (var s in Model.Showtimes)
            {
                <tr>
                    <td>@s.ShowtimeId</td>
                    <td>@s.MovieName</td>
                    <td>@s.RoomName</td>
                    <td>@s.StartTime.ToString("HH:mm dd/MM/yyyy")</td>
                    <td>@s.EndTime.ToString("HH:mm dd/MM/yyyy")</td>
                    <td class="text-center">
                        <button class="btn btn-warning btn-sm btn-action ms-1"
                                data-bs-toggle="modal"
                                data-bs-target="#updateModal"
                                data-id="@s.ShowtimeId"
                                data-movie="@s.MovieId"
                                data-room="@s.RoomId"
                                data-start="@s.StartTime.ToString("yyyy-MM-ddTHH:mm")"
                                data-end="@s.EndTime.ToString("yyyy-MM-ddTHH:mm")">
                            <i class="bi bi-pencil-square me-1"></i> Sửa
                        </button>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@s.ShowtimeId" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm btn-action"
                                    onclick="return confirm('Xác nhận xóa suất chiếu này?')">
                                <i class="bi bi-trash3 me-1"></i> Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6" class="text-center text-muted">Không có suất chiếu nào</td></tr>
        }
    </tbody>
</table>

<!-- Modal thêm mới -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="createModalLabel">
                        <i class="bi bi-plus-circle me-2"></i>Thêm suất chiếu mới
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Mã phim</label>
                        <input name="MovieId" class="form-control" type="number" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mã phòng</label>
                        <input name="RoomId" class="form-control" type="number" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Thời gian bắt đầu</label>
                        <input name="StartTime" class="form-control" type="datetime-local" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Thời gian kết thúc</label>
                        <input name="EndTime" class="form-control" type="datetime-local" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Đóng
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Thêm mới
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal cập nhật -->
<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Update">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateModalLabel">
                        <i class="bi bi-pencil-square me-2"></i>Cập nhật suất chiếu
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="ShowtimeId" id="update-id" />
                    <div class="mb-3">
                        <label class="form-label">Mã phim</label>
                        <input name="MovieId" id="update-movie" class="form-control" type="number" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mã phòng</label>
                        <input name="RoomId" id="update-room" class="form-control" type="number" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Thời gian bắt đầu</label>
                        <input name="StartTime" id="update-start" class="form-control" type="datetime-local" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Thời gian kết thúc</label>
                        <input name="EndTime" id="update-end" class="form-control" type="datetime-local" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Đóng
                    </button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Gán dữ liệu cho modal cập nhật
        const updateModal = document.getElementById('updateModal');
        updateModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            document.getElementById('update-id').value = button.getAttribute('data-id');
            document.getElementById('update-movie').value = button.getAttribute('data-movie');
            document.getElementById('update-room').value = button.getAttribute('data-room');
            document.getElementById('update-start').value = button.getAttribute('data-start');
            document.getElementById('update-end').value = button.getAttribute('data-end');
        });

