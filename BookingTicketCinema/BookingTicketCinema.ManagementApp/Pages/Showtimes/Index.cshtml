@page
@model BookingTicketCinema.ManagementApp.Pages.Showtimes.IndexModel
@{
    ViewData["Title"] = "Quản lý Suất Chiếu";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>🎬 Quản lý Suất Chiếu</h3>
        <a class="btn btn-primary" href="/Showtimes/Create">+ Thêm Suất Chiếu</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Phim</th>
                <th>Phòng</th>
                <th>Bắt đầu</th>
                <th>Kết thúc</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Showtimes.Count == 0)
            {
                <tr><td colspan="6" class="text-center text-muted">Chưa có suất chiếu nào</td></tr>
            }
            else
            {
                @foreach (var item in Model.Showtimes)
                {
                    <tr>
                        <td>@item.ShowtimeId</td>
                        <td>@item.MovieTitle</td>
                        <td>@item.RoomName</td>
                        <td>@item.StartTime.ToString("HH:mm dd/MM/yyyy")</td>
                        <td>@item.EndTime.ToString("HH:mm dd/MM/yyyy")</td>
                        <td>
                            <a href="/Showtimes/Edit?id=@item.ShowtimeId" class="btn btn-sm btn-warning">Sửa</a>
                            <a href="/Showtimes/Delete?id=@item.ShowtimeId" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
