@page
@model BookingTicketCinema.ManagementApp.Pages.Showtimes.DeleteModel
@{
    ViewData["Title"] = "Xóa suất chiếu";
}
<div class="container py-4">
    <h3>Xác nhận xóa suất chiếu</h3>
    <p>Bạn có chắc muốn xóa suất chiếu ID: <b>@Model.Id</b> không?</p>
    <form method="post">
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a href="/Showtimes" class="btn btn-secondary">Hủy</a>
    </form>
</div>
