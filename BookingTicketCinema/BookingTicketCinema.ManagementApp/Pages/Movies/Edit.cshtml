@page
@model BookingTicketCinema.ManagementApp.Pages.Movies.EditModel
@{
    ViewData["Title"] = "Sửa Phim";
}

<h3>@ViewData["Title"]: @Model.Input.Title</h3>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <form method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <input type="hidden" asp-for="Input.MovieId" />

                    <div class="mb-3">
                        <label asp-for="Input.Title" class="form-label"></label>
                        <input asp-for="Input.Title" class="form-control" />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label"></label>
                        <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Duration" class="form-label"></label>
                            <input asp-for="Input.Duration" type="text" class="form-control" placeholder="HH:mm:ss" />
                            <span asp-validation-for="Input.Duration" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.ReleaseDate" class="form-label">Ngày phát hành</label>
                            <input asp-for="Input.ReleaseDate" type="date" class="form-control" />
                            <span asp-validation-for="Input.ReleaseDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Genre" class="form-label">Thể loại</label>
                            <input asp-for="Input.Genre" class="form-control" placeholder="Hành động, Hài hước..." />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Status" class="form-label">Trạng thái</label>
                            <select asp-for="Input.Status" class="form-select" asp-items="Model.StatusList"></select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.TrailerUrl" class="form-label">Link Trailer (Embed)</label>
                        <input asp-for="Input.TrailerUrl" class="form-control" placeholder="https://www.youtube.com/embed/..." />
                        <div class="form-text">Phải là link 'embed' để hiển thị.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.CurrentPosterUrl" class="form-label"></label>
                        @if (!string.IsNullOrEmpty(Model.Input.CurrentPosterUrl))
                        {
                            <img src="@(Model.ApiBaseUrl + Model.Input.CurrentPosterUrl)" class="d-block img-thumbnail mb-2" style="max-width: 150px;" />
                        }
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.PosterFile" class="form-label"></label>
                        <input asp-for="Input.PosterFile" type="file" class="form-control" />
                        <span asp-validation-for="Input.PosterFile" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.CurrentBackdropUrl" class="form-label"></label>
                        @if (!string.IsNullOrEmpty(Model.Input.CurrentBackdropUrl))
                        {
                            <img src="@(Model.ApiBaseUrl + Model.Input.CurrentBackdropUrl)" class="d-block img-thumbnail mb-2" style="max-width: 150px;" />
                        }
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.BackdropFile" class="form-label"></label>
                        <input asp-for="Input.BackdropFile" type="file" class="form-control" />
                        <span asp-validation-for="Input.BackdropFile" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Cập nhật
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
