@page
@model BookingTicketCinema.ManagementApp.Pages.Movies.DeleteModel
@{
    ViewData["Title"] = "Xác nhận Xóa";
}

<h3 class_="@(Model.ErrorMessage == null ? "text-danger" : "text-dark")">@ViewData["Title"]</h3>
<hr />

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
    <a asp-page="./Index" class="btn btn-secondary">Quay lại</a>
}
else
{
    <div class="alert alert-danger">
        <h4 class="alert-heading">Bạn có chắc chắn muốn xóa?</h4>
        <p>Hành động này sẽ xóa vĩnh viễn phim:</p>
        <div class="d-flex align-items-center">
            <img src="@(Model.ApiBaseUrl + Model.Movie.PosterUrl)" alt="@Model.Movie.Title" style="width: 60px; height: 90px; object-fit: cover; margin-right: 15px;" />
            <h5 class="mb-0">@Model.Movie.Title</h5>
        </div>
        <p class="mt-3">Bạn không thể hoàn tác hành động này.</p>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Movie.MovieId" />
        <input type="hidden" asp-for="Movie.Title" /> <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Vâng, Xóa Ngay
        </button>
        <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
    </form>
}
