@page
@model BookingTicketCinema.ManagementApp.Pages.Users.DetailsModel
@{
    ViewData["Title"] = "Chi tiết Người dùng";
}

@if (Model.User != null)
{
    <h3>@ViewData["Title"]: @Model.User.FullName</h3>
    
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9"><code>@Model.User.Id</code></dd>

                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9">@Model.User.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.User.Email</dd>
                
                <dt class="col-sm-3">Giới tính</dt>
                <dd class="col-sm-9">@Model.User.Gender</dd>

                <dt class="col-sm-3">SĐT</dt>
                <dd class="col-sm-9">@(Model.User.PhoneNumber ?? "N/A")</dd>

                <dt class="col-sm-3">Vai trò (Role)</dt>
                <dd class="col-sm-9">
                    @{
                        var badgeClass = Model.User.Role.Trim() switch {
                            "Admin" => "bg-danger",
                            "Staff" => "bg-warning text-dark",
                            "Customer" => "bg-info text-dark",
                            _ => "bg-secondary"
                        };
                    }
                    <span class="badge @badgeClass fs-6">@Model.User.Role.Trim()</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại Danh sách
            </a>
            <a asp-page="./Edit" asp-route-id="@Model.User.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
    <a asp-page="./Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại Danh sách
    </a>
}