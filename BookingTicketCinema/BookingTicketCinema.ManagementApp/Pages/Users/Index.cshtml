@page
@model BookingTicketCinema.ManagementApp.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Quản lý Người dùng";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="card shadow-sm mb-3">
    <div class="card-header">
        <i class="bi bi-search"></i> Lọc và Tìm kiếm
    </div>
    <div class="card-body">
        <form method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label asp-for="SearchTerm" class="form-label">Tên hoặc Email</label>
                    <input asp-for="SearchTerm" type="text" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="FilterRole" class="form-label">Vai trò (Role)</label>
                    <select asp-for="FilterRole" class="form-select" asp-items="Model.RoleList">
                    </select>
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel-fill"></i> Lọc
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Kết quả (@Model.TotalUsers)</span>
        <a asp-page="./Create" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> Tạo người dùng mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>SĐT</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.PaginatedUsers)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                @{
                                    var badgeClass = user.Role.Trim() switch
                                    {
                                        "Admin" => "bg-danger",
                                        "Staff" => "bg-warning text-dark",
                                        "Customer" => "bg-info text-dark",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@user.Role.Trim()</span>
                            </td>
                            <td>@(user.PhoneNumber ?? "N/A")</td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary" title="Sửa">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.TotalPages > 0)
    {
        <div class="card-footer">
            <nav>
                <ul class="pagination justify-content-end mb-0">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="/Users/Index"
                           asp-route-currentPage="@(Model.CurrentPage - 1)"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-FilterRole="@Model.FilterRole">Lùi</a>
                    </li>
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="#">Trang @Model.CurrentPage / @Model.TotalPages</a>
                    </li>
                    <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="/Users/Index"
                           asp-route-currentPage="@(Model.CurrentPage + 1)"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-FilterRole="@Model.FilterRole">Tới</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>