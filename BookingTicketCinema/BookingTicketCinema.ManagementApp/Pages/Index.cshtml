@page
@model IndexModel
@{
    ViewData["Title"] = "Tổng quan";
}

<div class="row mb-4">
    <div class="col">
        <h3 class="h4">Chức năng nhanh</h3>
        
        <a class="btn btn-lg btn-primary me-2" asp-page="/CheckIn/Index">
            <i class="bi bi-upc-scan"></i> Kiểm tra vé
        </a>
        <a class="btn btn-lg btn-success me-2" asp-page="/POS/Index">
            <i class="bi bi-laptop"></i> Bán vé tại quầy
        </a>
        
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-lg btn-secondary me-2" asp-page="/Showtimes/Create">
                <i class="bi bi-plus-circle"></i> Tạo suất chiếu mới
            </a>
            <a class="btn btn-lg btn-secondary me-2" asp-page="/Movies/Create">
                <i class="bi bi-film"></i> Thêm phim mới
            </a>
        }
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <h3 class="h4">Thống kê nhanh (Admin)</h3>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Doanh thu hôm nay</h5>
                    <p class="card-text fs-4 fw-bold">15,000,000 ₫</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Vé đã bán (Hôm nay)</h5>
                    <p class="card-text fs-4 fw-bold">150 vé</p>
                </div>
            </div>
        </div>
    </div>
}