@model List<BookingTicketCinemaClient.Models.SeatGroupViewModel>
@{
  ViewData["Title"] = "Seat Group Manager";
  var rooms = ViewBag.Rooms as List<BookingTicketCinemaClient.Models.RoomViewModel> ?? new List<BookingTicketCinemaClient.Models.RoomViewModel>();
  // Read TempData into local variables to consume them immediately
  string? successMessage = TempData["SuccessMessage"]?.ToString();
  string? errorMessage = TempData["ErrorMessage"]?.ToString();
}

@* ************** Content ************** *@
<div class="row mb-4">
  <div class="col-12">
    <h4 class="fw-bold py-3 mb-4">Seat Group Manager</h4>
  </div>
</div>

@* Alerts *@
@if (!string.IsNullOrEmpty(successMessage))
{
  <div class="alert alert-success alert-dismissible mb-4" role="alert">
    <i class="icon-base bx bx-check-circle me-2"></i>
    @successMessage
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
  <div class="alert alert-danger alert-dismissible mb-4" role="alert">
    <i class="icon-base bx bx-error-circle me-2"></i>
    @errorMessage
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
}

@if (ViewBag.ErrorMessage != null)
{
  <div class="alert alert-danger alert-dismissible mb-4" role="alert">
    <i class="icon-base bx bx-error-circle me-2"></i>
    @ViewBag.ErrorMessage
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
}

<div class="row">
  <!-- Seat Groups Table -->
  <div class="col-12">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title m-0 me-2">Seat Groups</h5>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createSeatGroupModal">
          <i class="icon-base bx bx-plus me-1"></i>
          <span class="d-none d-sm-inline-block">Add New Seat Group</span>
        </button>
      </div>
      <div class="table-responsive text-nowrap">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Group Name</th>
              <th>Type</th>
              <th>Room</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            @if (Model != null && Model.Any())
            {
              @foreach (var seatGroup in Model)
              {
                <tr>
                  <td><strong>#@seatGroup.SeatGroupId</strong></td>
                  <td>
                    <i class="icon-base bx bx-group icon-md text-primary me-3"></i>
                    <span class="fw-medium">@seatGroup.GroupName</span>
                  </td>
                  <td>
                    <span class="badge bg-label-@(seatGroup.Type == 0 ? "primary" : seatGroup.Type == 1 ? "warning" : "success") me-1">
                      @seatGroup.TypeName
                    </span>
                  </td>
                  <td>
                    @if (!string.IsNullOrEmpty(seatGroup.RoomName))
                    {
                      <span class="text-body">@seatGroup.RoomName</span>
                    }
                    else
                    {
                      <span class="text-muted">Room #@seatGroup.RoomId</span>
                    }
                  </td>
                  <td>@seatGroup.CreatedAt.ToString("MM/dd/yyyy")</td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="icon-base bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="javascript:void(0);" 
                           data-bs-toggle="modal" 
                           data-bs-target="#editSeatGroupModal"
                           data-seatgroup-id="@seatGroup.SeatGroupId"
                           data-seatgroup-name="@seatGroup.GroupName"
                           data-seatgroup-type="@seatGroup.Type">
                          <i class="icon-base bx bx-edit-alt me-1"></i> Edit
                        </a>
                        <a class="dropdown-item" href="javascript:void(0);" 
                           onclick="confirmDelete(@seatGroup.SeatGroupId, '@seatGroup.GroupName')">
                          <i class="icon-base bx bx-trash me-1"></i> Delete
                        </a>
                      </div>
                    </div>
                  </td>
                </tr>
              }
            }
            else
            {
              <tr>
                <td colspan="6" class="text-center py-6">
                  <p class="text-body-secondary mb-0">No seat groups found. Create your first seat group!</p>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Create Seat Group Modal -->
<div class="modal fade" id="createSeatGroupModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalCenterTitle">Create New Seat Group</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form asp-controller="SeatGroup" asp-action="Create" method="post">
        <div class="modal-body">
          <div class="mb-3">
            <label for="createSeatGroupName" class="form-label">Group Name</label>
            <input type="text" class="form-control" id="createSeatGroupName" name="GroupName" placeholder="Enter group name" required />
          </div>
          <div class="mb-3">
            <label for="createSeatGroupType" class="form-label">Type</label>
            <select class="form-select" id="createSeatGroupType" name="Type" required>
              <option value="0">Standard</option>
              <option value="1">VIP</option>
              <option value="2">Couple</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="createSeatGroupRoomId" class="form-label">Room</label>
            <select class="form-select" id="createSeatGroupRoomId" name="RoomId" required>
              <option value="">Select a room</option>
              @foreach (var room in rooms)
              {
                <option value="@room.RoomId">@room.Name (@room.TypeName)</option>
              }
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Seat Group</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Seat Group Modal -->
<div class="modal fade" id="editSeatGroupModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalCenterTitle">Edit Seat Group</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="editSeatGroupForm" method="post">
        <div class="modal-body">
          <input type="hidden" id="editSeatGroupId" name="id" />
          <div class="mb-3">
            <label for="editSeatGroupName" class="form-label">Group Name</label>
            <input type="text" class="form-control" id="editSeatGroupName" name="GroupName" placeholder="Enter group name" />
          </div>
          <div class="mb-3">
            <label for="editSeatGroupType" class="form-label">Type</label>
            <select class="form-select" id="editSeatGroupType" name="Type">
              <option value="0">Standard</option>
              <option value="1">VIP</option>
              <option value="2">Couple</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Update Seat Group</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Delete Confirmation Form -->
<form id="deleteSeatGroupForm" method="post" style="display: none;">
</form>

@section PageScripts {
<script>
  // Handle edit modal
  document.addEventListener('DOMContentLoaded', function() {
    const editModal = document.getElementById('editSeatGroupModal');
    if (editModal) {
      editModal.addEventListener('show.bs.modal', function(event) {
        const button = event.relatedTarget;
        const seatGroupId = button.getAttribute('data-seatgroup-id');
        const seatGroupName = button.getAttribute('data-seatgroup-name');
        const seatGroupType = button.getAttribute('data-seatgroup-type');

        document.getElementById('editSeatGroupId').value = seatGroupId;
        document.getElementById('editSeatGroupName').value = seatGroupName || '';
        document.getElementById('editSeatGroupType').value = seatGroupType || '0';

        const form = document.getElementById('editSeatGroupForm');
        form.action = `/admin/seatgroup/${seatGroupId}/update`;
      });
    }
  });

  // Handle delete confirmation
  function confirmDelete(seatGroupId, seatGroupName) {
    if (confirm(`Are you sure you want to delete "${seatGroupName}"? This action cannot be undone.`)) {
      const form = document.getElementById('deleteSeatGroupForm');
      form.action = `/admin/seatgroup/${seatGroupId}/delete`;
      form.submit();
    }
  }
</script>
}

