@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.FeaturedMovies.Any())
{
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (var i = 0; i < Model.FeaturedMovies.Count; i++)
            {
                <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></button>
            }
        </div>
        <div class="carousel-inner">
            @for (var i = 0; i < Model.FeaturedMovies.Count; i++)
            {
                var movie = Model.FeaturedMovies[i]; // Lấy phim

                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@movie.BackdropUrl" class="d-block w-100" alt="@movie.Title" style="aspect-ratio: 16/7; object-fit: cover;">
                    <div class="carousel-caption d-none d-md-block text-start mb-5"
                         style="background: linear-gradient(to top, rgba(0,0,0,0.8), transparent); left: 0; right: 0; bottom: 0; padding-left: 10%; padding-bottom: 3rem;">
                        <h1 class="display-4 fw-bold">@movie.Title</h1>
                        <a class="btn btn-primary btn-lg mt-2" asp-page="/Movie/Details" asp-route-id="@movie.Id">
                            <i class="bi bi-ticket-perforated"></i> Mua vé ngay
                        </a>
                        <a class="btn btn-outline-light btn-lg mt-2" href="@movie.TrailerUrl" target="_blank">
                            <i class="bi bi-play-circle"></i> Xem Trailer
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Đang chiếu</h2>
        <a asp-page="/Movie/Index" class="btn btn-outline-primary">Xem tất cả <i class="bi bi-arrow-right"></i></a>
    </div>

    <div class="horizontal-scroll-wrapper">
        @foreach (var movie in Model.NowShowingMovies)
        {
            <div class="movie-card-horizontal">
                <img src="@movie.PosterUrl" alt="@movie.Title" />
                <div class="movie-card-horizontal-content">
                    <h6>@movie.Title</h6>
                    <p class="text-muted small"><i class="bi bi-clock"></i> @movie.Duration phút</p>
                    <a asp-page="/Movie/Details" asp-route-id="@movie.Id"
                       class="btn btn-primary btn-sm w-100">Mua vé</a>
                </div>
            </div>
        }
        @if (!Model.NowShowingMovies.Any())
        {
            <p class="text-muted">Chưa có phim đang chiếu.</p>
        }
    </div>
</div>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Sắp chiếu</h2>
        <a asp-page="/Movie/Index" class="btn btn-outline-primary">Xem tất cả <i class="bi bi-arrow-right"></i></a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var movie in Model.ComingSoonMovies)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 movie-card-vertical">
                    <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text text-muted small">@movie.Genre</p>
                        <p class="card-text text-muted small"><i class="bi bi-clock"></i> @movie.Duration phút</p>
                        <div class="mt-auto">
                            <a asp-page="/Movie/Details" asp-route-id="@movie.Id"
                               class="btn btn-outline-secondary w-100">
                                <i class="bi bi-info-circle"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (!Model.ComingSoonMovies.Any())
        {
            <div class="col">
                <p class="text-muted">Chưa có thông tin phim sắp chiếu.</p>
            </div>
        }
    </div>
</div>